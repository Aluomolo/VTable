{
  "extends": "@internal/ts-config/tsconfig.base.json",
  "include": ["src"],
  "compilerOptions": {    
    "types": ["jest", "offscreencanvas", "node"],
    "lib": ["DOM", "ESNext"],
    "baseUrl": "./",
    "rootDir": "./src",
    "plugins": [
      { "transform": "typescript-transform-paths" },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
    "strict": false,
    "composite": true
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
}